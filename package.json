{
  "name": "verify-form",
  "version": "0.0.10",
  "description": "Verify Form Component",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "RegularForm",
    "regular-form",
    "vue"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "play": "pnpm run -C playground dev",
    "play:build": "pnpm run -C playground build",
    "lint": "eslint .",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:e2e": "cypress open",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --tag --push && pnpm publish"
  },
  "repository": {
    "type": "git",
    "url": "git + git@github.com:Simon-He95/verify-form.git"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/verify-form/issues"
  },
  "author": "Simon He",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.0",
    "@babel/types": "^7.18.4",
    "@types/node": "^17.0.38",
    "bumpp": "^7.1.1",
    "eslint": "^8.16.0",
    "eslint-plugin-n": "^15.2.1",
    "pkgroll": "^1.3.1",
    "typescript": "^4.7.2",
    "verify-form": "workspace:0.0.10",
    "vitest": "^0.13.1"
  },
  "dependencies": {
    "@vueuse/core": "^8.1.1",
    "vue": "^3.2.36"
  }
}
